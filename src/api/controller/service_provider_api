from flask import Flask, Blueprint, request, jsonify
import json
from repository.MemberRepository import MemberDatabase
from helper.helper import token_required,verify_token

# Create a Blueprint instance for the member API
sevice_provider_api_bp= Blueprint("serviceProviderAPI",__name__)


#Create member API route
@member_api_bp.route('/serviceProvider/<int:id>', methods=['GET'], endpoint="serviceProvider_endpoint")
@token_required
def service_provider_get(id):
    member_obj=MemberDatabase()
    data=member_obj.member_get(id)
    return jsonify(data)
